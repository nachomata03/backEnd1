<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tu Carrito</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 font-sans">
    <div class="container mx-auto p-4 md:p-8 lg:p-12">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="p-6 md:p-8 border-b border-gray-200">
                <h1 class="text-3xl font-bold text-gray-800">Tu Carrito de Compras</h1>
            </div>

            {{#if cart.products.length}}
            <div class="p-6 md:p-8 space-y-6">
                {{#each cart.products}}
                <div class="flex flex-col md:flex-row items-center justify-between border-b last:border-b-0 pb-4 md:pb-0">
                    <div class="flex items-center space-x-4 mb-4 md:mb-0 w-full md:w-auto">
                        {{!-- <img src={{this.id.thumbnails}} alt="{{this.id.title}}" class="w-20 h-20 object-cover rounded-md" /> --}}
                        <div class="flex-grow">
                            <h3 class="text-lg font-semibold text-gray-800">{{this.id.title}}</h3>
                            <p class="text-gray-500">Precio: ${{this.id.price}}</p>
                        </div>
                    </div>

                    <div class="flex items-center space-x-4">
                        <span class="text-gray-700">Cantidad: {{this.quantity}}</span>
                        <span class="font-bold text-gray-800">Subtotal: {{this.subTotal}}</span>

                        <!-- Botón eliminar producto -->
                        <form action="/api/carts/{{../cart._id}}/products/{{this._id}}" method="POST">
                            <input type="hidden" name="_method" value="DELETE" />
                            <button type="submit"
                                class="ml-4 bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700 transition">
                                Eliminar
                            </button>
                        </form>
                    </div>
                </div>
                {{/each}}
            </div>

            <!-- Botón para vaciar el carrito -->
            <div class="p-6 md:p-8 flex justify-end items-center bg-gray-50 space-x-4">
                <form action="/api/carts/{{cart._id}}" method="POST" onsubmit="return confirm('¿Seguro que quieres vaciar el carrito?');">
                    <input type="hidden" name="_method" value="DELETE" />
                    <button type="submit"
                        class="bg-red-500 text-white px-6 py-2 rounded hover:bg-red-600 transition font-semibold">
                        Vaciar carrito
                    </button>
                </form>

                <span class="text-xl font-bold text-green-800">Total: {{cart.totalPrice}}</span>
            </div>

            {{else}}
            <div class="p-6 md:p-8 text-center text-gray-500">
                <p>Tu carrito está vacío.</p>
                <a href="/api/all-products" class="mt-4 inline-block text-blue-600 hover:underline">Ir a la tienda</a>
            </div>
            {{/if}}

        </div>
    </div>
</body>

</html>
