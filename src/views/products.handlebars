<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>{{title}}</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 text-gray-900 p-6">
    <div class="max-w-6xl mx-auto">
        <h1 class="text-3xl font-bold mb-6 text-center">{{title}}</h1>

        {{#if productos.length}}
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            {{#each productos}}
            <div class="bg-white rounded-2xl shadow p-4 hover:shadow-lg transition">
                <h2 class="text-xl font-semibold">{{this.title}}</h2>
                <p class="text-gray-600 mt-1">{{this.description}}</p>
                <p class="text-sm text-indigo-500 mt-1 italic">Categoría:
                    {{this.category}}</p>
                <p class="text-lg font-bold text-green-600 mt-2">$ {{this.price}}</p>
                <button class="mt-4 w-full bg-indigo-600 text-white py-2 rounded-xl hover:bg-indigo-700 transition">
                    Agregar al carrito
                </button>
            </div>
            {{/each}}
        </div>
        {{else}}
        <p class="text-center text-gray-600">No hay productos disponibles.</p>
        {{/if}}

        <div class="mt-6 flex justify-center">
            {{#if hasPrevPage}}
                <a href="{{prevLink}}" class="text-blue-500 hover:underline">Anterior</a>
            {{/if}}

            <span class="mx-4">Página {{currentPage}} de {{totalPages}}</span>

            {{#if hasNextPage}}
                <a href="{{nextLink}}" class="text-blue-500 hover:underline">Siguiente</a>
            {{/if}}
        </div>
    </div>

</body>

</html>