<html lang="es">

<head>
    <meta charset="UTF-8" />
    <title>{{title}}</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 text-gray-900 p-6">
    <div class="max-w-6xl mx-auto">
        <h1 class="text-3xl font-bold mb-6 text-center">{{title}}</h1>

        {{#if productos.length}}
        
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            {{#each productos}}
            <div class="bg-white rounded-2xl shadow p-4 hover:shadow-lg transition">
                <h2 class="text-xl font-semibold">{{this.title}}</h2>
                <p class="text-gray-600 mt-1">{{this.description}}</p>
                <p class="text-sm text-indigo-500 mt-1 italic">Categoría:
                    {{this.category}}</p>
                <p class="text-lg font-bold text-green-600 mt-2">$ {{this.price}}</p>
                <div>
                    <form action="/api/carts/{{../user.cart}}/products/{{this._id}}" method="POST">
                        <button class="w-full bg-blue-600 text-white py-2 rounded-xl hover:bg-blue-700 transition">Agregar al carrito</button>
                    </form>
                </div>


                {{#ifCond ../user.role '==' 'admin'}}
                <div class="mt-4 flex space-x-2">
                    <a href="products/{{this._id}}/edit"
                        class="flex-1 text-center bg-yellow-500 text-white py-2 rounded-xl hover:bg-yellow-600 transition">
                        Editar
                    </a>
                    <form action="/api/products/{{this._id}}" method="POST" class="flex-1">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit"
                            class="w-full bg-red-600 text-white py-2 rounded-xl hover:bg-red-700 transition">
                            Eliminar
                        </button>
                    </form>
                </div>
                {{/ifCond}}



            </div>
            {{/each}}


        </div>

        {{#ifCond user.role '==' 'admin'}}
            <div class="mt-8 text-center">
                <a href="/api/newProduct"
                    class="bg-indigo-600 text-white px-6 py-3 rounded-xl hover:bg-indigo-700 transition text-lg font-semibold">
                    Agregar Producto
                </a>
            </div>
        {{/ifCond}}
        
        {{else}}
        <p class="text-center text-gray-600">No hay productos disponibles.</p>
        {{/if}}

        <div class="mt-6 flex justify-center">
            {{#if hasPrevPage}}
            <a href="{{prevLink}}" class="text-blue-500 hover:underline">Anterior</a>
            {{/if}}

            <span class="mx-4">Página {{currentPage}} de {{totalPages}}</span>

            {{#if hasNextPage}}
            <a href="{{nextLink}}" class="text-blue-500 hover:underline">Siguiente</a>
            {{/if}}
        </div>
    </div>

</body>

</html>